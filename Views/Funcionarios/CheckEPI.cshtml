@model List<FuncionarioModel>

@{
    ViewData["Title"] = "Funcionários";
}

<div class="text-center">

    <h1 class="display-4">CheckList de EPI</h1>

    <br />

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Funcionarios" asp-action="CriarFuncionario">Adicionar EPI</a>
    </div>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">EPI</th>
                <th scope="col">Check</th>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Botina</td>
                <td>
                    Conforme:
                    <br>
                    Não Conforme:
                    <br />
                </td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                        </label>
                    </div>
                </td>
            </tr>
            <tr>

            <tr>
                <th scope="row">2</th>
                <td>Uniforme</td>
                <td>Conforme: 
                   <br>
                    Não Conforme:
                   <br />
                </td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                        </label>
                    </div>
                </td>
            </tr>
            <tr>

        </tbody>
    </table>


</div>

