@model CheckList.Models.FuncionarioModel;

@{
    ViewData["Title"] = "Funcionários";
}


<div class="text-center">

    <h1 class="display-4">Cadastro de Funcionários</h1>

</div>

<form asp-controller="Funcionarios" asp-action="Alterar" method="post">
    <div class="form-group">
        <label for="Matricula" class="form-label">Matricula</label>
        <input type="id" asp-for="Matricula" class="form-control" placeholder="Digite a matricula">

    </div>
    <div class="form-group">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome">

    </div>

    <button type="submit" class="btn btn-primary w-100 mt-2 mb-2">Adicionar</button>
    <a class="btn btn-secondary w-100" asp-action="Index" asp-controler="Funcionarios" role="button">Voltar</a>


</form>

